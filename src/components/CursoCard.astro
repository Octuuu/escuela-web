---
const { title, image, alt } = Astro.props;
import { Image } from 'astro:assets';
---

<div class="bg-white/5 border border-white/10 backdrop-blur-sm text-white shadow-xl rounded-xl overflow-hidden w-full max-w-xs mx-auto transition-all duration-300">
  <div class="relative overflow-hidden group">
    <Image 
      src={image} 
      width={400}      
      height={208} 
      alt={alt} 
      class="w-full h-52 object-cover transition-transform duration-500 group-hover:scale-110"
      loading="eager"
    />
    <div class="absolute bottom-0 left-0 w-full h-14 bg-gradient-to-t from-[#0F172A] to-transparent opacity-90"></div>
  </div>

  <div class="p-5 text-center ">
    <h2 class="text-lg md:text-xl font-semibold text-white leading-snug tracking-tight">
      {title}
    </h2>
  </div>
</div>
