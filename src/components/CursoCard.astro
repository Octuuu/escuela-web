---
const { title, image, alt } = Astro.props;
import { Image } from 'astro:assets';
---

<div class="bg-gradient-to-br from-[#0f172a] to-[#1e293b] shadow-xl rounded-2xl overflow-hidden w-full max-w-xs mx-auto border border-[#FFB84D]/40 hover:border-[#FFB84D] transition-all duration-300 group">
  <div class="overflow-hidden">
    <Image 
      src={image} 
      width={400}      
      height={192} 
      alt={alt} 
      class="w-full h-52 object-cover transform transition-transform duration-500 ease-in-out group-hover:scale-110"
      loading="eager"
    />
  </div>
  <div class="text-center p-5 bg-white">
    <h2 class="text-[#0f172a] font-semibold text-lg md:text-xl tracking-tight leading-snug">
      {title}
    </h2>
  </div>
</div>
