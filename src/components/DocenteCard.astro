---
import { Image } from 'astro:assets';
const { name, subject, image, alt, perfil } = Astro.props;
---

<div class="bg-white/5 mt-15 lg:mt-10 border border-white/10 backdrop-blur-sm text-white shadow-xl rounded-xl overflow-hidden w-full max-w-sm mx-auto transition-all duration-300">
  <div class="relative overflow-hidden group flex justify-center items-center">
    <Image
      src={image}
      alt={alt}
      width="190"
      height="192"
      class="w-46 h-48 object-cover transition-transform duration-500 group-hover:scale-105"
      loading="eager"
    />

  </div>

  <div class="p-4 text-center">
    <h2 class="text-xl font-light mb-2">{name}</h2>
    <a
      href={perfil}
      class="relative inline-flex border-1 border-[#ed9821]/50 items-center justify-start overflow-hidden font-medium transition-all rounded group py-1.5 px-4 mt-2"
    >

      <span class="absolute w-56 h-48 rounded bg-[#ed9821] bottom-0 left-0 translate-x-full translate-y-full mb-9 ml-9 transition-all duration-500 ease-out group-hover:ml-0 group-hover:mb-32 group-hover:translate-x-0"></span>

      <span class="relative text-white w-full text-left transition-colors duration-300 ease-in-out group-hover:text-white flex items-center gap-2">
        Ver Perfil 
        <span class="text-[#ffffff] transition-transform duration-300 group-hover:translate-x-2 font-bold">
          â†’
        </span>
      </span>
    </a>

  </div>
</div>
