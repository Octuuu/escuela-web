---
import { Image } from 'astro:assets';
const { name, subject, image, alt, perfil } = Astro.props;
---

<div class="bg-white/5 border border-white/10 backdrop-blur-sm text-white shadow-xl rounded-xl overflow-hidden w-full max-w-sm mx-auto transition-all duration-300">
  <div class="relative overflow-hidden group">
    <Image
      src={image}
      alt={alt}
      width="400"
      height="192"
      class="w-full h-48 object-cover transition-transform duration-500 group-hover:scale-118"
      loading="eager"
    />

  </div>

  <div class="p-4 text-center">
    <h2 class="text-xl font-light mb-2">{name}</h2>
    <!-- <p class="text-sm text-gray-300 mb-4">{subject}</p> -->

    <a
      href={perfil}
      class="inline-block text-sm font-semibold text-white  px-5 py-2 rounded-full hover:bg-white hover:text-black transition-colors duration-300"
    >
      Ver Perfil
    </a>
  </div>
</div>
