---
import "../styles/global.css";
import { ViewTransitions } from 'astro:transitions';
import { Image } from 'astro:assets';
import logo from '../assets/ifd.webp';

---

<html lang="es">
  <head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>IFD San Ignacio - Instituto de Formación Docente de San Ignacio Guazú</title>
  <meta name="description" content="IFD San Ignacio - Instituto de Formación Docente en San Ignacio Guazú, Paraguay. Formación de calidad para futuros educadores." />
  <meta name="keywords" content="IFD San Ignacio, formación docente, instituto, educación, Paraguay" />
  <meta property="og:title" content="IFD San Ignacio - Instituto de Formación Docente de San Ignacio Guazú" />
  <meta property="og:description" content="Formación de calidad para futuros educadores en Paraguay." />
  <meta property="og:image" content="https://www.ifdsanignacioguazu.com/logoifd2.webp" />
  <meta property="og:url" content="https://www.ifdsanignacioguazu.com/" />
  <meta property="og:type" content="website" />

  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link
    href="https://fonts.googleapis.com/css2?family=Roboto+Slab:wght@400;500;700&display=swap"
    rel="stylesheet"
  />

  <link rel="icon" type="image/png" href="/favicon.png" />

  <ViewTransitions />
</head>

<body class="font-sans bg-white text-gray-900 overflow-x-hidden overflow-y-auto h-screen">

    <header class="sticky top-0 z-50 bg-[rgba(1,1,40,0.7)] backdrop-blur-md border-b border-white/20 shadow-md navbar-animate">
      <nav class="max-w-7xl mx-auto px-4 md:px-6 md:py-4 flex items-center justify-between">
    
        <div>
          <a href="/">
            <Image class="w-14" src='/assets/ifd.webp' width={400} height={192} alt="Logo Instituto de Formación Docente San Ignacio Guazú" loading="eager" />
          </a>
        </div>

        <ul class="gap-6 hidden md:flex text-lg text-white font-semibold">
          <li>
            <a
              href="/"
              class="relative after:absolute after:left-0 after:bottom-0 after:w-0 after:h-[2px] after:bg-gray-200 after:transition-all after:duration-300 after:ease-in-out hover:after:w-full"
            >
              Inicio
            </a>
          </li>
          <li>
            <a
              href="/carreras"
              class="relative after:absolute after:left-0 after:bottom-0 after:w-0 after:h-[2px] after:bg-gray-200 after:transition-all after:duration-300 after:ease-in-out hover:after:w-full"
            >
              Carreras
            </a>
          </li>
          <li>
            <a
              href="/informacion"
              class="relative after:absolute after:left-0 after:bottom-0 after:w-0 after:h-[2px] after:bg-gray-200 after:transition-all after:duration-300 after:ease-in-out hover:after:w-full"
            >
              Información
            </a>
          </li>
          <li>
            <a
              href="/docentes"
              class="relative after:absolute after:left-0 after:bottom-0 after:w-0 after:h-[2px] after:bg-gray-300 after:transition-all after:duration-300 after:ease-in-out hover:after:w-full"
            >
              Docentes
            </a>
          </li>

          <li>
            <a
              href="/proyectos"
              class="relative after:absolute after:left-0 after:bottom-0 after:w-0 after:h-[2px] after:bg-gray-300 after:transition-all after:duration-300 after:ease-in-out hover:after:w-full"
            >
              Proyectos
            </a>
          </li>
        </ul>

        <!-- menú hamburguesa para móviles -->
        <div class="md:hidden">
          <button id="menu-toggle" class="text-white focus:outline-none">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
            </svg>
          </button>
        </div>
      </nav>

      <!-- menú desplegable para móviles -->
      <div id="mobile-menu" class="md:hidden fixed top-16 left-0 w-full bg-[rgba(1,1,40,0.9)] backdrop-blur-md text-white z-40 hidden">
        <ul class="flex flex-col items-center space-y-4 py-4 text-lg font-semibold">
          <li>
            <a href="/" class="relative transition-all duration-300 ease-in-out hover:text-gray-300 after:absolute after:left-0 after:bottom-0 after:w-0 after:h-[2px] after:bg-gray-300 after:transition-all after:duration-300 after:ease-in-out hover:after:w-full">Inicio</a>
          </li>
          <li>
            <a href="/carreras" class="relative transition-all duration-300 ease-in-out hover:text-gray-300 after:absolute after:left-0 after:bottom-0 after:w-0 after:h-[2px] after:bg-gray-300 after:transition-all after:duration-300 after:ease-in-out hover:after:w-full">Carreras</a>
          </li>
          <li>
            <a href="/informacion" class="relative transition-all duration-300 ease-in-out hover:text-gray-300 after:absolute after:left-0 after:bottom-0 after:w-0 after:h-[2px] after:bg-gray-300 after:transition-all after:duration-300 after:ease-in-out hover:after:w-full">Información</a>
          </li>
          <li>
            <a href="/docentes" class="relative transition-all duration-300 ease-in-out hover:text-gray-300 after:absolute after:left-0 after:bottom-0 after:w-0 after:h-[2px] after:bg-gray-300 after:transition-all after:duration-300 after:ease-in-out hover:after:w-full">Docentes</a>
          </li>
          <li>
            <a href="/proyectos" class="relative transition-all duration-300 ease-in-out hover:text-gray-300 after:absolute after:left-0 after:bottom-0 after:w-0 after:h-[2px] after:bg-gray-300 after:transition-all after:duration-300 after:ease-in-out hover:after:w-full">Proyectos</a>
          </li>
        </ul>
      </div>
    </header>

    <main class="max-w-7xl mx-auto p-6">
      <slot />
    </main>

    <script type="module" src="/scripts/menu.js"></script>  
    
  </body>
</html>