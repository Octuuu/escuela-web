---
import Layout from "../layouts/Layout.astro";
import DocenteCard from "../components/DocenteCard.astro";
import { docentes } from "../data/docentes.js";
---

<Layout>
  <section class="min-h-[70vh] flex flex-col lg:flex-row items-start justify-center gap-10 px-6 text-white">
    
    <div class="lg:w-1/3 space-y-6 ">
      <h1 class="text-5xl font-extrabold text-[#FFB84D]">
        PLANTEL DOCENTE
      </h1>
      
      <div class="w-24 h-1 bg-[#FFB84D] rounded-full"></div>

      <div class="space-y-8 mt-13" >

        <div class="">
          <h3 class="text-xl font-bold mb-2 text-[#FFB84D]">Profesionales Calificados</h3>
          <p class="text-lg font-light text-gray-300 opacity-80 animate-fade-in">
            Nuestro equipo docente está compuesto por profesionales altamente capacitados, con amplia experiencia académica y práctica en sus respectivas áreas, comprometidos con la formación de calidad y el desarrollo integral de los estudiantes.
          </p>
        </div>


      </div>
    </div>

    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-2 lg:grid-cols-2 xl:grid-cols-3 gap-7 w-full lg:w-2/3 animate-fade-in">
      {docentes.map((docente) => (
        <DocenteCard
          name={docente.name}
          subject={docente.subject}
          image={docente.image}
          alt={docente.alt}
          perfil={`/docentes/${docente.slug}`}
        />
      ))}
    </div>
  </section>
</Layout>

