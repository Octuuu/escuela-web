---
import Layout from "../layouts/Layout.astro";
import DocenteCard from "../components/DocenteCard.astro";
import { docentes } from "../data/docentes.js";
---

<Layout>
  <section class="min-h-[70vh] flex flex-col lg:flex-row items-start justify-center gap-10 px-6 text-white">
    
    <div class="lg:w-1/3 space-y-6 ">
      <h1 class="text-5xl font-extrabold text-[#FFB84D]">
        PLANTEL DOCENTE
      </h1>
      <p class="text-base text-gray-300 font-medium animate-fade-in" >
        Lorem ipsum dolor sit amet consectetur adipisicing elit. Nihil iste consequuntur minima itaque facere voluptate beatae dignissimos.
      </p>

      <div class="space-y-4" >
        <div class="bg-white/5 border border-white/10 p-5 rounded-xl shadow-xl hover:scale-[1.02] transition duration-300">
          <h3 class="text-xl font-semibold mb-2">Profesionales Calificados</h3>
          <p class="text-sm text-gray-300 opacity-80 animate-fade-in">
            Lorem ipsum dolor sit amet, consectetur adipisicing elit. Esse ad mollitia temporibus, quo repellat similique ratione accusamus.
          </p>
        </div>

        <div class="bg-white/5 border border-white/10 p-5 rounded-xl shadow-xl hover:scale-[1.02] transition duration-300">
          <h3 class="text-xl font-semibold mb-2">Profesionales Calificados</h3>
          <p class="text-sm text-gray-300 opacity-80" data-aos="fade-up">
            Lorem ipsum dolor sit amet, consectetur adipisicing elit. Esse ad mollitia temporibus, quo repellat similique ratione accusamus.
          </p>
        </div>
      </div>
    </div>

    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-2 lg:grid-cols-2 xl:grid-cols-3 gap-7 w-full lg:w-2/3 animate-fade-in">
      {docentes.map((docente) => (
        <DocenteCard
          name={docente.name}
          subject={docente.subject}
          image={docente.image}
          alt={docente.alt}
          perfil={`/docentes/${docente.slug}`}
        />
      ))}
    </div>
  </section>
</Layout>

