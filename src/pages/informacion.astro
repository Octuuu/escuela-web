---
import Layout from "../layouts/Layout.astro";
import PasosSection from "../components/PasosSection.astro";
import AcreditacionSection from "../components/AcreditacionSection.astro";
import InscripcionSection from "../components/InscripcionSection.astro";
import AOS from 'aos';
import 'aos/dist/aos.css';
---

<Layout>
  <PasosSection />
  <AcreditacionSection />
  <InscripcionSection />
</Layout>

<script>
  import AOS from 'aos';
  import 'aos/dist/aos.css';

  AOS.init({
    once: false, 
  });

  window.addEventListener("scroll", () => {
    AOS.refresh();
  });

  document.addEventListener('DOMContentLoaded', () => {
    AOS.refresh(); 
  });
</script>
